@model SistemaProdutos.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>

<div class="mb-3">
    <label><strong>Nome:</strong></label>
    <p>@Model.Nome</p>
</div>

<div class="mb-3">
    <label><strong>Descrição:</strong></label>
    <p>@Model.Descricao</p>
</div>

<div class="mb-3">
    <label><strong>Preço:</strong></label>
    <p>@Model.Preco.ToString("C")</p>
</div>

<div class="mb-3">
    <label><strong>Quantidade em Estoque:</strong></label>
    <p>@Model.Quantidade</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
