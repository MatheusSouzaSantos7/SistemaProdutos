@model IEnumerable<SistemaProdutos.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>Lista de Produtos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Novo Produto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Descricao</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>@produto.Quantidade</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@produto.Id">Detalhes</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@produto.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@produto.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
